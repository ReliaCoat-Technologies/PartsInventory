<dx:DXWindow xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars" 
    x:Class="reliacoatInventory.ReliacoatInventory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:Views="clr-namespace:reliacoatInventory.Views"
    xmlns:ViewModels="clr-namespace:reliacoatInventory.ViewModels"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    DataContext="{dxmvvm:ViewModelSource Type={x:Type ViewModels:ReliacoatInventoryViewModel}}"
    dx:ThemeManager.Theme="MetropolisDark"
    Title="ReliacoatInventory" Height="900" Width="1440"
    >

    <DockPanel>
        <dxb:MainMenuControl DockPanel.Dock="Top">
            <dxb:BarSubItem Content="Tools">
            </dxb:BarSubItem>
        </dxb:MainMenuControl>

        <dx:DXTabControl>
            <dx:DXTabItem Header="Item Inventory">
                <Views:ItemInventory/>
            </dx:DXTabItem>
            <dx:DXTabItem Header="Log Report">
                <Views:InventoryLog/>
            </dx:DXTabItem>
            <dx:DXTabItem Header="Users and Accounts"></dx:DXTabItem>
            <dx:DXTabItem Header="Kits"></dx:DXTabItem>
        </dx:DXTabControl>
    </DockPanel>
</dx:DXWindow>
